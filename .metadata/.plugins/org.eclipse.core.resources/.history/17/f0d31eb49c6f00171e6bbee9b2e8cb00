		map.put("car", nullObject);	//������ֱ�ӷ���null,�����װ����
		//����JSON����
		JSONObject jsonObject = new JSONObject();
		jsonObject.accumulateAll(map);
		//���
		System.out.println("JSON����:");
		System.out.println(jsonObject.toString());
		System.out.println("-------------------");
		
	}
	
